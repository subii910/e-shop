@using System.Globalization
@{
    ViewData["Title"] = "My Orders";
    Layout = "~/Views/Shared/_Layoutforallpage.cshtml";
    var aed = new CultureInfo("en-AE");
}

<h2 class="mb-4">My Orders</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-info">You have not placed any orders yet.</div>
}
else
{
    foreach (var order in Model)
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <strong>Order ID:</strong> @order.OrderId |
                <strong>Date:</strong> @order.OrderDate?.ToString("yyyy-MM-dd") |
                <strong>Time:</strong> @order.Time |
                <strong>Status:</strong> @order.Status
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Qty</th>
                            <th>Unit Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in order.Items)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>@(item.UnitPrice?.ToString("C", aed))</td>
                                <td>@((item.Quantity * item.UnitPrice)?.ToString("C", aed))</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="text-right font-weight-bold">
                    Total: @order.TotalAmount?.ToString("C", aed)
                </div>
            </div>
        </div>
    }
}
