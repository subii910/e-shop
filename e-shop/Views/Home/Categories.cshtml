@model IEnumerable<e_shop.Models.Category>

@{
	Layout = "~/Views/Shared/_Layoutforallpage.cshtml";
}

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
	<div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
		<h1 class="font-weight-semi-bold text-uppercase mb-3">Categories</h1>
		<div class="d-inline-flex">
			<p class="m-0"><a href="/Home">Home</a></p>
			<p class="m-0 px-2">-</p>
			<p class="m-0">Categories</p>
		</div>
	</div>
</div>
<!-- Page Header End -->
<!-- Shop Start -->
<div class="container-fluid pt-5">
	<div class="row px-xl-5">


		<!-- Shop Sidebar Start -->
	
		






		<!-- Shop Product Start -->
        <div class="container-fluid pt-5">
            <div class="text-center mb-5">
                <h2 class="section-title px-5">
                    <span class="px-3">Categories</span>
                </h2>
            </div>

            <div class="row px-xl-5">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-header bg-white p-0 position-relative overflow-hidden">
                                <img class="img-fluid w-100" style="height: 200px; object-fit: cover;" src="/DataFiles/category/@item.Image" alt="@item.Name" />
                            </div>

                            <div class="card-body p-3">
                                <h5 class="text-center text-primary mb-3">@item.Name</h5>

                                <table class="table table-sm table-borderless mb-3" style="font-size: 0.9rem;">
                                    <tr>
                                        <th class="text-muted">Details:</th>
                                        <td>@item.Details</td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Status:</th>
                                        <td>
                                            <span class="badge bg-@(item.Status == "Active" ? "success" : "secondary")">@item.Status</span>
                                        </td>
                                    </tr>
                                </table>

                                <div class="d-flex justify-content-center">
                                    <a href="/Home/Products/@item.CategoryId" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye me-1"></i> View Products
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

		<!-- Shop Product End -->
	</div>
</div>
<!-- Shop End -->
